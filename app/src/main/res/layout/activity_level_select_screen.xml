<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"> <!-- Background image -->

    <!-- Title for the level select screen -->
    <TextView
        android:id="@+id/selectLevelTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/levelselect"
        android:textSize="32sp"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

    <!-- GridLayout for levels 1 to 12 with ImageView instead of Button -->
    <GridLayout
        android:id="@+id/levelGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectLevelTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:rowCount="4"
        android:columnCount="3">

        <!-- ImageView for Level 1 -->
        <ImageView
            android:id="@+id/level1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/level1"
            android:contentDescription="Level 1"/>

        <!-- ImageView for Level 2 -->
        <ImageView
            android:id="@+id/level2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/level2"
            android:contentDescription="Level 2"/>

        <!-- ImageView for Level 3 -->
        <ImageView
            android:id="@+id/level3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/level3"
            android:contentDescription="Level 3"/>

        <!-- Continue adding ImageViews for levels 4 to 12 in the same way -->

        <!-- Example for another ImageView (Level 4) -->
        <ImageView
            android:id="@+id/level4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/level4"
            android:contentDescription="Level 4"/>

        <ImageView
            android:id="@+id/level5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/level5"
            android:contentDescription="Level 4"/>

        <ImageView
            android:id="@+id/level7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/level6"
            android:contentDescription="Level 4"/>

        <ImageView
            android:id="@+id/level8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/level7"
            android:contentDescription="Level 4"/>

        <ImageView
            android:id="@+id/level6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/level8"
            android:contentDescription="Level 4"/>

        <ImageView
            android:id="@+id/level9"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/level9"
            android:contentDescription="Level 4"/>

        <ImageView
            android:id="@+id/level10"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/level10"
            android:contentDescription="Level 4"/>

        <ImageView
            android:id="@+id/level11"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/level11"
            android:contentDescription="Level 4"/>

        <ImageView
            android:id="@+id/level12"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/level12"
            android:contentDescription="Level 4"/>



    </GridLayout>


    <ImageView
        android:id="@+id/BackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/levelGrid"
        android:src="@drawable/backbtn"
        />


</RelativeLayout>
